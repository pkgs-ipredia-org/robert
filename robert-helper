#!/bin/bash
# 
# Robert Helper for adding torrents

echo "-- Robert helper --"
echo "-- Arguments: $@"

# Create the torrent directory (i does not exist before first Robert start)
mkdir -p ~/.robert/torrents/

# If we have arguments copy file to roberts torrent folder
[ "$#" -eq 0 ] || cp "$@" ~/.robert/torrents/

# Run only one Robert
(pidof Robert || Robert "$@" &)
